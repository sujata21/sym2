{% extends '::layout.html.twig' %}

{% form_theme edit_form ':Form:fields.html.twig' %}

{% block body %}

<div class="panel panel-primary panel-show">
    <div class="panel-heading">
        <h3 class="panel-title">
            Test3 - Edit page
            <!-- add help content to bottom help div -->
            <a id="helpBtn" href="#" data-module-id="Test3" title="Test3 edit page help" data-toggle="modal" data-target="#Test3"><span class="glyphicon glyphicon-question-sign pull-right"></span></a>
        </h3>
    </div>
    <div class="panel-body">
		<form id="editForm" role="form" class="form-horizontal" action="{{ path('test3_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
			{{ form_widget(edit_form) }}
		</form>
    </div>
    <div class="panel-footer">        <a class="btn btn-success" href="{{ path('test3') }}" class="btn"><span class="glyphicon glyphicon-list"></span> Back to list</a>
        <button type="submit" form="editForm" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span> Save</button>    </div>
</div>
<!-- help content div -->
<div id="Test3-div-help-content" class="help-content">
    Test3 edit page help content
</div>
<!-- // help content div -->

{% endblock %}
