{% extends '::layout.html.twig' %}

{% form_theme edit_form ':Form:fields.html.twig' %}

{% block body %}

<div class="panel panel-primary panel-show">
    <div class="panel-heading">
        <h3 class="panel-title">
            LDAPUserGroup - Edit page
            <!-- add help content to bottom help div -->
            <a id="helpBtn" href="#" data-module-id="LDAPUserGroup" title="LDAPUserGroup edit page help" data-toggle="modal" data-target="#Test3"><span class="glyphicon glyphicon-question-sign pull-right"></span></a>
