<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">    
        
    {% stylesheets '@ApplicationMainBundle/Resources/public/bootstrap/css/bootstrap.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}

    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>
    {% stylesheets '@ApplicationMainBundle/Resources/public/bootstrap/css/bootstrap-responsive.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
	    	
	
	{% stylesheets '@ApplicationMainBundle/Resources/public/css/style.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
	
	{% block stylesheets %}{% endblock %}
	
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
  </head>

  <body>
	
	{% block header %}
		{% include '::header.html.twig' %}    
	{% endblock %}
	
    <div class="body container">
      <div class="row-fluid">
      	      	
      	{% block sidebar %}
      	<div class="span3">
      		<div class="well sidebar-nav">
    			<ul class="nav nav-list">
      				{% block sidebar_items %}	
          				{% include '::sidebar_default.html.twig' %}
          			{% endblock %}
    			</ul>
			</div><!--/.well -->		          
        </div><!--/span-->
      	{% endblock %}
         	
      
        <div class="{% block body_span %}span12{% endblock %}">
         
         {% block body %}{% endblock %}
         
        </div><!--/span-->
      </div><!--/row-->

      <hr>
	
	 {% block footer %}	
	 	{% include '::footer.html.twig' %}      
	 {% endblock %}
	  	
    </div><!--/.fluid-container-->
	{% javascripts
    '@ApplicationMainBundle/Resources/public/jquery/*'
    '@ApplicationMainBundle/Resources/public/bootstrap/js/*' %}
    <script src="{{ asset_url }}"></script>
    
	{% endjavascripts %} 

  </body>
</html>