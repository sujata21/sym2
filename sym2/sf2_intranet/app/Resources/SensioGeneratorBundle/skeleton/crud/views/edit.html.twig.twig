{% block extends %}
{{ "{% extends '::layout.html.twig' %}" }}
{% endblock extends %}

{{ "{% form_theme edit_form ':Form:fields.html.twig' %}" }}

{% block body %}
{{ "{% block body %}" }}

<div class="panel panel-primary panel-show">
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ entity }} - Edit page
            <!-- add help content to bottom help div -->
            <a id="helpBtn" href="#" data-module-id="{{ entity }}" title="{{ entity }} edit page help" data-toggle="modal" data-target="#{{ entity }}"><span class="glyphicon glyphicon-question-sign pull-right"></span></a>
        </h3>
    </div>
    <div class="panel-body">
		<form id="editForm" role="form" class="form-horizontal" action="{{ "{{ path('" ~ route_name_prefix ~ "_update', { 'id': entity.id }) }}" }}" method="post" {{ "{{ form_enctype(edit_form) }}" }}>
			{{ "{{ form_widget(edit_form) }}" }}
		</form>
    </div>
    <div class="panel-footer">
        {%- include "crud/views/others/edit_actions.html.twig.twig" %}
    </div>
</div>
<!-- help content div -->
<div id="{{ entity }}-div-help-content" class="help-content">
    {{ entity }} edit page help content
</div>
<!-- // help content div -->

{{ "{% endblock %}" }}
{% endblock body %}
