{% extends '::layout.html.twig' %}

{% block body %}
<div class="panel panel-primary panel-show">
    <div class="panel-heading">
        <h3 class="panel-title">
            Test2 - Show page
            <!-- add help content to bottom help div -->
            <a id="helpBtn" href="#" data-module-id="Test2" title="Test2 show page help" data-toggle="modal" data-target="#Test2"><span class="glyphicon glyphicon-question-sign pull-right"></span></a>
        </h3>
    </div>
    <div class="panel-body">
        <table class="table-show">
            <tbody>
                <tr>
                    <th>Id:</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name:</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Info:</th>
                    <td>{{ entity.info }}</td>
                </tr>
                <tr>
                    <th>Date:</th>
                    <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel-footer">        <a class="btn btn-success" href="{{ path('test2') }}" class="btn"><span class="glyphicon glyphicon-list"></span> Back to list</a>
        <a class="btn btn-info" href="{{ path('test2_edit', { 'id': entity.id }) }}" class="btn"><span class="glyphicon glyphicon-edit"></span> Edit</a>
        <a class="btn btn-danger btn-delete pull-right" href="{{ path('test2_delete', { 'id': entity.id }) }}" class="btn"><span class="glyphicon glyphicon-trash"></span> Delete</a>    </div>
</div>
<!-- help content div -->
<div id="Test2-div-help-content" class="help-content">
    Test2 show page help content
</div>
<!-- // help content div -->

{% endblock %}
