{% extends "AWWorxShareBundle::layout.html.twig" %}

{# form_theme form _self #}

{% block body %}
    {% include 'AWWorxShareBundle:Default:navbar.html.twig' %}
    
    <div id="divContent">
    	{# if is_granted("ROLE_CLIENT") #}
    		{% for entity in entities %}
    			<div class="row-fluid" style="width: 970px; margin: 0 auto;">
    				<div class="span12">
    					<h3>{{ entity.clientName }}</h3>
    				</div>
					<div class="span12" style="margin: 0px 20px;">
	    				{% for projectAssigned in entity.projectsAssigned %}
		    				<div class="divProjectTile">
		    					<h4>{{ projectAssigned.name }}</h4>
		    					<p>{{ projectAssigned.info }}</p>
			    				<button class="btn btn-primary btnOpenProject" data-href="{{ path('worxshare_projects_open', {'id': projectAssigned.id}) }}">Open</button>
			    			</div>
		    			{% endfor %}
	    			</div>
    			</div>
    		{% endfor %}
    	{# endif #}
    </div>
    <div id="divSysInfo"></div>
    <div id="divNewEditForm" title=""></div>
{% endblock body %}
