<div style="border-right: 1px solid #B6B6B6;padding-right: 10px;vertical-align: top;">
	<h4>Add image to project</h4>
	<form id="formAddImage" action="{{ path('worxshare_projectsimages_create', {'project_id': project_id}) }}" method="post" {{ form_enctype(form) }} enctype="multipart/form-data">
		<input type="file" id="imageUpload" name="image" accept="image/*">
		<button class="btn btn-success" type="button" id="btnAddImage"><i class="icon-picture"></i> Add image</button>
		<div class="divImagePreview"><img id="imagePreview" alt="" /></div>
		{{ form_widget(form) }}
	    <button type="submit" id="imageSave">Add</button>
	    <button id="btnNewEditCancel">Cancel</button>
	</form>
</div>
<div style="vertical-align: top;">
	<div><h4>Saved images</h4></div>
	<div style="height: 234px; overflow:auto;width: 230px;">
	{% for entity in entities %}
		<div class="divSavedImages">
		    <div style="display: inline-block;">
			    <a class="preview" href="/uploads/awworxshare/{{ folder.folder ~ '/' ~ entity.uniqueName }}" data-name="{{ entity.name }}" data-info="{{ entity.info }}" target="_blank">
			    	<img style="max-width: 100px;" src="/uploads/awworxshare/{{ folder.folder ~ '/' ~ entity.uniqueName }}">
			    </a>
		    </div>
		    <div style="display: inline-block;text-align: center;">
		    	<!-- <button class="btn btn-mini btn-info" data-href="{{ entity.id }}"><i class="icon-pencil icon-white"></i></button> -->
			    <button class="btn btn-mini btn-danger btnImageDelete" data-href="{{ path('worxshare_projectsimages_delete', {'id': entity.id}) }}"><i class="icon-trash icon-white"></i></button>
		    </div>
	    </div>
	{% endfor %}
	</div>
</div>
