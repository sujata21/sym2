{% extends 'AWProfanityBundle::layout.html.twig' %}

{% block body %}
<div class="panel panel-primary panel-show">
    <div class="panel-heading">
        <h3 class="panel-title">Email Subject -- {{subject}}
            <a id="helpBtn" data-target="#Test3" data-toggle="modal"  href="#">
                <span class="glyphicon glyphicon-question-sign pull-right"></span>
            </a>
        </h3>
    </div>
    <div class="panel-body">
    	<ul id="tabs" class="nav nav-tabs" data-tabs="tabs">  
			<li id="profanity" class="active"><a href="#red" data-toggle="tab">Profanity Check</a></li>
			<li id="spam"><a href="#orange" data-toggle="tab">Spam Check</a></li>
			<li id="spell"><a href="#yellow" data-toggle="tab">Spell check</a></li>  
		</ul>
		 <div id="my-tab-content" class="tab-content">
			<div class="tab-pane active" id="red">
				<h3>Profanity Check</h3>
				<p>{{ poutput | raw }}</p>
			</div>
			<div class="tab-pane" id="orange">
				<h3>Spam Check</h3>
				<p>{{ soutput | raw }}</p>
			</div>
			<div class="tab-pane" id="yellow">
				<h3>Spell Check</h3> <h3><div id="highlight">highlight</div></h3>
				<textarea id="test" disabled rows="15" style="width:90%;display:none;" spellcheck="false">
					{{spoutput}}
              </textarea>
              <iframe frameborder=0 width=480 height=240 src="http://www.jspell.com/public-spell-checker-embed2.html"></iframe>
              <div id="incorrect-word-list"></div>
              <div id="html"></div>
				
			</div>  
     </div>
        
</div>

{% endblock %}
