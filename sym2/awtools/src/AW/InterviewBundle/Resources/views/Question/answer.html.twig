{% extends 'AWInterviewBundle::layout.html.twig' %}

{% block body %}
{{ parent() }}

<div class="row-fluid" style="padding: 240px;">
    <div class="span12" style="padding-left: 125px;">
        <div  style="display:none;" id="sucess">
           <div class="alert alert-success">Question Created!</div>

                <a href="/app_dev.php/question/new"> Create a new entry </a><br>
                <a href="/app_dev.php/question/list/all"> Question List </a>
            
        </div>
        <form  method="post" id="answer_form" style="display: block;">
            <input type="hidden" name="correct_ans" id="correct_ans"  >
            <input type="hidden" name="question_id" id="question_id" value="{{entity.id}}" >
            <div class="row-fluid">
                <b>Question :  {{entity.question}}</b>
            </div>
            <div class="row-fluid">
                <div class="span4">Option count : </div>
                <div class="span7">
                    <div class="alert alert-success" id="ans_option_error" style="display: none;"></div>

                    <select id='optioncnt' name='optioncnt' onchange="get_optioncnt()" >
                        <option value="0"> -- Select -- </option>
                        {% for i in 1..5 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div id="options" class="row-fluid"  style='display: none;' >
            </div>
            <div class="row-fluid"> <button type="button" id="question_save" onclick="save_answer({{entity.id}})">Submit</button></div>
        </form>



    </div>


</div>

{% endblock %}
