{% extends 'AWInterviewBundle::layout.html.twig' %}

{% block body %}
{{ parent() }}
<div class="span3 bs-docs-sidebar">
    <ul class="nav nav-list bs-docs-sidenav affix">
        <li>
            <a href="/interview/list">
                <i class="icon-chevron-right"></i>
                Interview List
            </a>
        </li>
        <li>
            <a href="/interview/admin">
                <i class="icon-chevron-right"></i>
                New Interview Session
            </a>
        </li>
        <li>
            <a href="/category/">
                <i class="icon-chevron-right"></i>
                Category
            </a>
        </li>
        <li>
            <a href="/jobtitle/">
                <i class="icon-chevron-right"></i>
                Job type
            </a>
        </li>
        <li>
            <a href="/question/list/all">
                <i class="icon-chevron-right"></i>
                Question list
            </a>
        </li>


    </ul>
</div>
<div class="row-fluid" style="padding: 240px;">
    <div class="span12" >
        <div class="row-fluid">
            <div class="span8"><h3>Interview Categories</h3></div>
            <div class="span4">
                <a href="{{ path('category_new') }}" style="color: red;text-decoration: none;">
                    <h3>Create a new entry</h3>
                </a>
            </div>

        </div>


        <div class="row-fluid" style="font-weight:bold;color: #FF2300;text-transform: uppercase;background-color: #DDDDDD; padding-top: 10px;padding-left:30px;">
            <div class="span2">ID</div>
            <div class="span6">Name</div>
            <div class="span4">Actions</div>

        </div>

    {% for entity in entities %}
    <div class="row-fluid" style="font-weight:bold;padding: 30px;">
        <div class="span2">{{ entity.id }}</div>
        <div class="span6">{{ entity.name }}</div>
        <div class="span4">
            <!-- <a href="{{ path('category_show', { 'id': entity.id }) }}"><i class="icon-search" title="show"></i></a> -->
            <a href="{{ path('category_edit', { 'id': entity.id }) }}" style="color: #000000;text-decoration: none;"><i class="icon-pencil" title="edit"></i></a>&nbsp;&nbsp;
            <a href="{{ path('category_delete', { 'id': entity.id }) }}" style="color: red;text-decoration: none;"><i class="icon-trash" title="delete" onclick="alert('Related Job Type will not exist anymore!')"></i></a>
        </div>

    </div>

    {% endfor %}

    </div>
</div>
{% endblock %}
